generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id     Int     @id @default(autoincrement())
  name   String
  layers Layer[]
}

model Layer {
  id     Int    @id @default(autoincrement())
  bookId Int
  Book   Book   @relation(fields: [bookId], references: [id])
  value  String
}
